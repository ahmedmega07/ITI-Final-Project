@model Department


<h3>Are you sure you want to delete this department </h3>
<div>
    <h4>@Model.Name</h4>
    <p>
        <strong>ID:</strong> @Model.Id<br />
        <strong>ManagerName:</strong> @Model.ManagerName
    </p>

    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
